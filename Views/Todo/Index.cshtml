@model ListTodoViewModel

<div class="row">
  <div class="col text-center">
    <h1>@ViewData["Title"]</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titulo</th>
          <th scope="col">Data</th>
          <th scope="col">Completo?</th>
          <th scope="col">Ações</th>

        </tr>
      </thead>
      <tbody>
        @foreach (var tarefa in Model.Todos)
        {
          var isCompleted = tarefa.IsCompleted ? "Sim" : "Não";
          <tr>
            <th scope="row">@tarefa.Id</th>
            <td>@tarefa.Title</td>
            <td>@tarefa.Date.ToString("dd/MM/yyyy")</td>
            <td>@isCompleted</td>
            <td>
              <a href="#" class="btn btn-sm btn-success">Completar</a>
              <a href="#" class="btn btn-sm btn-warning">Editar</a>
              <a 
                asp-controller="Todo" 
                asp-action="Delete" 
                asp-route-id="@tarefa.Id"
                class="btn btn-sm btn-danger"
              >
                Excluir
              </a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col">
    <a
      asp-controller="Todo" 
      asp-action="Create"
      class="btn btn-primary"
    >
      Nova Tarefa
    </a>
  </div>
</div>